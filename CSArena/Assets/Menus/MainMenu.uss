.container {
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.8);
}

.title {
    font-size: 32px;
    color: white;
    margin-bottom: 40px;
}

.menu-button {
    width: 200px;
    height: 50px;
    margin: 10px;
    background-color: #4CAF50;
    color: white;
}

.hidden {
    display: none;
}

.code {
    font-size: 24px;
    color: gold;
    margin-top: 10px;
}